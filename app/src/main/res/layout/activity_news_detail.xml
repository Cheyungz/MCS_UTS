<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewsDetail"
    android:background="#D7DAEE"
    android:padding="10dp">

    <ImageView
        android:id="@+id/newsDetailBackArrow"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:src="@drawable/baseline_arrow_back_24" />

    <ImageView
        android:id="@+id/newsDetailImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo"
        android:gravity="center_horizontal"
        android:layout_below="@id/newsDetailBackArrow"
        />

    <TextView
        android:id="@+id/newsDetailTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is a title"
        android:textStyle="bold"
        android:layout_below="@+id/newsDetailImage"
        android:padding="10dp"/>

    <TextView
        android:id="@+id/newsDetailContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="normal"
        android:text="Description: A team consist of 11 people"
        android:layout_below="@id/newsDetailTitle"
        />

</RelativeLayout>